{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "indent": "off",
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "double"],
    "no-multiple-empty-lines": ["warn", { "max": 4 }],
    "react/prop-types": "off",
    "prettier/prettier": [
      "warn", 
      {
        "jsxBracketSameLine": true,
        "singleQuote": false,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 2,
        "parser": "flow"
      }, 
      {
        "usePrettierrc": false
      }
    ],
    "no-console": "off"
  }
}
